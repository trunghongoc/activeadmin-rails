<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Sale</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.price %></td>
        <td><%= book.sale %></td>
        <td><%= book.user.name %></td>
        <td><%= link_to 'Show', user_book_path(book.user_id,book.id) %></td>
        <td><%= link_to 'Edit', edit_user_book_path(book.user_id,book.id) %></td>
        <td><%= link_to 'Destroy', user_book_path(book.user_id,book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_user_book_path %>